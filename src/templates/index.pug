doctype
html(lang='es-Es')
    head
        include ./shared/head-tag
    body(data-theme="dark")
        include ./shared/header
        main
            include ./layout/hero
            include ./layout/about
            include ./layout/portfolio
            include ./layout/experience
            include ./layout/education
        include ./shared/footer
        script.
            document.getElementById('switch-theme').addEventListener('change', (event) => {
                document.body.removeAttribute('data-theme'); //Eliminamos el atributto para a√±adir despues el necesario
                (event.target.checked) ? document.body.setAttribute('data-theme', 'light') : document.body.setAttribute('data-theme', 'dark')
            });
